{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Next.js 특화 설정
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
    // paths를 정의하지 않으면 base의 @hds/ui를 상속
    // Next.js는 자체적으로 @/* → ./src/* 를 처리함
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
